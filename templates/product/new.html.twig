{% extends 'base.html.twig' %}

{% block title %}Add New Product{% endblock %}

{% block body %}
    <h1>Add New Product</h1>

    {{ form_start(form) }}
    {{ form_widget(form) }}
    <button type="submit">Add Product</button>
    {{ form_end(form) }}

    {% for message in app.flashes('success') %}
        <div class="alert alert-success">
            {{ message }}
        </div>
    {% endfor %}
{% endblock %}